{
  "version": 3,
  "configurePresets": [
    {
      "name": "uv-env",
      "displayName": "UV Virtual Environment",
      "description": "Use Python from uv virtual environment",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "Python3_EXECUTABLE": "${sourceDir}/.venv/bin/python3",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "uv-env",
      "configurePreset": "uv-env"
    }
  ]
}
